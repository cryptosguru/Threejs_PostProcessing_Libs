{
	"include": ["src", "demo/src", "manual/js"],
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"postprocessing": ["src/*"]
		},
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"importHelpers": true,
		"skipLibCheck": true,
		"strictNullChecks": false,
		"noImplicitOverride": true
	},
}
