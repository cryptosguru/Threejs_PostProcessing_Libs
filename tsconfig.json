{
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS",
			"resolveJsonModule": true
		},
		"include": ["./*.ts"]
	},
	"compilerOptions": {
		"rootDir": ".",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"importHelpers": true,
		"skipLibCheck": true,
		"strictNullChecks": false
	},
	"include": ["src", "demo/src"]
}
